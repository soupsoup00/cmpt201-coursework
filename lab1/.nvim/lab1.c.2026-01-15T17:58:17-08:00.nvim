#define _GNU_SOURCE
#include <stdbool.h>
#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>

int main(int argc, char *argv[]) {
  char *line = NULL;
  size_t len = 0;
  FILE *stream;
  ssize_t input;
  bool run = 1;

  while (run) {
    printf("Please enter text: ");
    input = getline(&line, &len, &stream);

    free(line);
  }
}
